    .card.shadow-lg.mb-3
      .card-header.text-center
        .h5= card.original_text
        .card-body
          = card.review_date.strftime("%d/%m/%Y Ð² %H:%M")
          .btn-group.btn-group-sm.btn-block.shadow-lg
            .btn.btn-info= link_to('Show', '#')
